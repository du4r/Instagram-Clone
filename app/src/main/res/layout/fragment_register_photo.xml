<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="70dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/register_img_profile"
                android:src="@drawable/photo_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="48dp"
               />

            <TextView
                android:id="@+id/photo_register_title"
                style="@style/Theme.InstagramClone.TextViewBase.Form"
                android:text="@string/photo_register_title"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/photo_register_subtitle"
                style="@style/Theme.InstagramClone.TextViewBase.Form"
                android:text="@string/photo_register_subtitle"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                />

            <com.du4r.instagramclone.common.view.CustomLoadingButton
                android:id="@+id/register_btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/next" />

            <Button
                android:id="@+id/register_btn_skip"
                android:text="@string/skip"
                style="@style/Theme.InstagramClone.Link"
                />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
